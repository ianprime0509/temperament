{
  "name": "temperament",
  "description": "A library for working with musical temperaments.",
  "files": [
    "dist"
  ],
  "main": "./dist/temperament.umd.cjs",
  "module": "./dist/temperament.es.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/temperament.es.mjs",
      "require": "./dist/temperament.umd.cjs"
    }
  },
  "scripts": {
    "build": "run-s build:lib build:types",
    "build:lib": "vite build",
    "build:types": "tsc -p tsconfig.types.json",
    "fmt": "prettier --write .",
    "prepack": "npm run build",
    "test": "run-p test:*",
    "test:check": "tsc --noEmit",
    "test:fmt": "prettier --check .",
    "test:lint": "eslint --ext .js,.cjs,.mjs,.ts .",
    "test:unit": "jest",
    "prepare": "json2ts src/schema.json src/schema.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianprime0509/temperament.git"
  },
  "keywords": [
    "temperament",
    "music",
    "theory",
    "pitch"
  ],
  "author": {
    "name": "Ian Johnson",
    "email": "ian@ianjohnson.dev"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ianprime0509/temperament/issues"
  },
  "homepage": "https://github.com/ianprime0509/temperament",
  "dependencies": {
    "ajv": "^8.8.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jest": "^27.4.4",
    "json-schema-to-typescript": "^10.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "semantic-release": "^18.0.1",
    "ts-jest": "^27.1.2",
    "ts-jest-resolver": "^2.0.0",
    "typescript": "^4.5.3",
    "vite": "^2.7.10"
  }
}
