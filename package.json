{
  "name": "temperament",
  "description": "A library for working with musical temperaments.",
  "files": [
    "index.js",
    "index.d.ts",
    "schema.d.ts",
    "schema.json"
  ],
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js"
    }
  },
  "scripts": {
    "build": "run-s build:clean build:generate-schema build:types",
    "build:clean": "rimraf index.d.ts schema.d.ts schema.json",
    "build:generate-schema": "node generate-schema.js",
    "build:types": "tsc -p tsconfig.declaration.json",
    "fmt": "prettier --write .",
    "prepack": "npm run build",
    "test": "run-p test:*",
    "test:fmt": "prettier --check .",
    "test:lint": "eslint .",
    "test:types": "tsc",
    "test:unit": "uvu"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianprime0509/temperament.git"
  },
  "keywords": [
    "temperament",
    "music",
    "theory",
    "pitch"
  ],
  "author": {
    "name": "Ian Johnson",
    "email": "ian@ianjohnson.dev"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ianprime0509/temperament/issues"
  },
  "homepage": "https://github.com/ianprime0509/temperament",
  "dependencies": {
    "ajv": "^8.9.0"
  },
  "devDependencies": {
    "eslint": "^8.8.0",
    "json-schema-to-typescript": "^10.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "typescript": "^4.5.5",
    "uvu": "^0.5.3"
  }
}
